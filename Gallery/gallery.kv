<GalleryWindow>:
    id: main_win
    orientation: 'vertical'

    BoxLayout:
        id: top_navigation
        size_hint_y: None
        height: 35

        Button:
            id: file_trigger
            text: 'File'
            size_hint: 0.2, None
            height: 30
            on_release: file_dropdown.open(self)

            Widget:
                on_parent: file_dropdown.dismiss()

                DropDown:
                    id: file_dropdown
                    Button:
                        id: open_img
                        text: 'Abrir imagem'
                        size_hint_y: None
                        height: 30
                    Button:
                        id: open_folder
                        text: 'Abrir diret√≥rio'
                        size_hint_y: None
                        height: 30
        Label:
            text: "Israel's Viewer"
            size_hint: 0.6, None
            height: 30
            bold: True
        Button:
            id: more_trigger
            text: 'File'
            size_hint: 0.2, None
            height: 30
            on_release: more_dropdown.open(self)

            Widget:
                on_parent: more_dropdown.dismiss()

                DropDown:
                    id: more_dropdown
                    Button:
                        id: open_about
                        text: 'Sobre'
                        size_hint_y: None
                        height: 30
                    Button:
                        id: quit
                        text: 'Sair'
                        size_hint_y: None
                        height: 30
                        on_release: app.root.quit()
    RecycleView:
        viewclass: 'Label'
        data: [{'text': "Hello"},{'text': "Hello"},{'text': "Hello"},{'text': "Hello"},{'text': "Hello"},{'text': "Hello"},{'text': "Hello"}]
        RecycleGridLayout:
            default_size: None, 250
            default_size_hint: 1, None
            size_hint_y: None
            height: self.minimum_height
            spacing: 10
            orientation: 'vertical'
            cols: 3